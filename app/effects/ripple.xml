<?xml version="1.0" encoding="UTF-8"?>
<effect name="Ripple" category="Distort">
	<row name="Speed">
		<field type="double" min="0" default="100" id="speed"/>
	</row>
	<row name="Intensity">
		<field type="double" min="0" default="100" id="intensity"/>
	</row>
	<row name="Frequency">
		<field type="double" min="0" default="100" id="frequency"/>
	</row>
	<row name="Reverse">
		<field type="bool" default="0" id="reverse"/>
	</row>
	<row name="Stretch">
		<field type="bool" default="0" id="stretch"/>
	</row>
	<row name="Center">
		<field type="double" default="0" id="xoff"/>
		<field type="double" default="0" id="yoff"/>
	</row>
	<shader vert="common.vert" frag="ripple.frag"/>
</effect>
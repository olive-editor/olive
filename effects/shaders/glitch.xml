<?xml version="1.0" encoding="UTF-8"?>
<effect name="Glitch" category="Distort">
	
	<row name="Mode">
		<field type="combo" default="0" id="mode">
			<option>Signal Loss</option>
			<option>Bad TV</option>
			<option>Worse TV</option>
		</field>
	</row>

	<row name="Intensity">
		<field type="double" min="0.0" default="5.0" max="10.0" id="THRESHOLD"/>
	</row>
	<shader vert="common.vert" frag="glitch.frag"/>
</effect>